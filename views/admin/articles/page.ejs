<%- include('../../partials/header') %>
<%- include('../../partials/home-navbar') %>
<body>
	<%- include('../../partials/topo') %>
	<div class="container">
		
      <% result.articles.rows.forEach(article =>{ %>
      <br>
			
			
			 	<h2><%= article.title %></h2>
			 
		
			 	
			 	<a href="/<%= article.slug %>" class="nav-item">Ler artigo</a>
			
			
			<hr>
	  <% }) %>

	  <div class="row">
	  	<div class="col col-12 d-flex justify-content-start">
	  		<% if(result.page > 2){ %>
                <a href="/articles/page/<%= result.page - 1 %>" class="mr-3">Prev <<<</a>
            <% } else if(result.page == 2) { %>
                 <a href="/" class="mr-3">Prev <<<</a>
	  	     <% } %>
            
         
        </div>

     	<div class="col col-12 d-flex justify-content-end">
     		             
     		<% if(result.next) { %>
               <a href="/articles/page/<%= result.page + 1 %>" class="mr-3">Next >>></a>
     	    <% } %>
     		
     	</div>

	</div>
</body>
<%- include('../../partials/footer') %>